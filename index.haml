!!! 5
%html
  %head
    %title The Coding Goat
    %meta{:author => "Patrick Kontschak"}
    %style{:type => "text/css", :media => "all"} @import "http://fonts.googleapis.com/css?family=Inconsolata";
    %style{:type => "text/css", :media => "all"} @import "css/cocoss.css";
    %style{:type => "text/css", :media => "all"} @import "css/style.css";
    /[if lt IE 9]
      %script{:src => "http://html5shim.googlecode.com/svn/trunk/html5.js"}
    %script{:src => "http://ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js"}
    %script{:src => "scripts/script.js"}
  %body
    #editor.NSWindow
      .INTitlebarView
        .TrafficLightButtons
          .red
          .yellow
          .green
        .TitleBar
          The Coding Goat
        .NSToolbar
      .NSView
        #tree
          %ul
            %li.nav
              Navigation
            %li
              %a#index
                index.haml
            %li
              %a#skills
                skills.css
            %li
              %a#education
                education.coffee
            %li
              %a#work
                work.rb
            %li
              %a#contact
                contact.md
        #textfield
          #scroller
      #statusbar
        %a#copyleft
    #info.NSWindow
      .INTitlebarView
        .TrafficLightButtons
          .red
          .yellow
          .green
        .TitleBar
          Info
        .NSToolbar
      .NSView
